<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".reader.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="30pt"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
        android:layout_width="15pt"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textStyle="bold"
        android:textAlignment="center" />

        <TextView
            android:layout_width="100pt"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Handheld Terminal"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Buttons grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="5pt"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Add Bag -->
<!--        <Button-->
<!--            android:id="@+id/buttonAddBag"-->
<!--            style="@style/TerminalButtonStyle"-->
<!--            android:text="Add batch" />-->

        <!-- Receiving button -->
<!--        <Button-->
<!--            android:id="@+id/buttonReceiving"-->
<!--            style="@style/TerminalButtonStyle"-->
<!--            android:text="Receiving" />-->

        <!-- Picking button -->
<!--        <Button-->
<!--            android:id="@+id/buttonPicking"-->
<!--            style="@style/TerminalButtonStyle"-->
<!--            android:text="Picking" />-->

        <Button
            android:id="@+id/ordersButton"
            style="@style/TerminalButtonStyle"
            android:text="Outbound Orders" />

        <Button
            android:id="@+id/inBoundOrder"
            style="@style/TerminalButtonStyle"
            android:text="Inbound Orders" />

        <Button
            android:id="@+id/buttonHold"
            style="@style/TerminalButtonStyle"
            android:text="Hold" />

        <Button
            android:id="@+id/unHold"
            style="@style/TerminalButtonStyle"
            android:text="Un Hold" />

        <Button
            android:id="@+id/buttonReplace"
            style="@style/TerminalButtonStyle"
            android:text="Replace" />


        <Button
            android:id="@+id/buttonConsume"
            style="@style/TerminalButtonStyle"
            android:text="Consume" />

        <Button
            android:id="@+id/buttonMapping"
            style="@style/TerminalButtonStyle"
            android:text="Mapping" />



    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
